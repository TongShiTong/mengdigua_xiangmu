/* pages/decorate/index.wxss */
.wrapper {
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: white;
  box-sizing: border-box;
}

view, input {
  box-sizing: border-box;
}

.content-panel {
  flex: 1;
  overflow: hidden;
}

.scroll-panel {
  height: 100%;
}

.image-select {
  width: 670rpx;
  height: 360rpx;
  background: rgba(243,243,243,1);
  border-radius: 16rpx;
  display: flex;
  font-size: 24rpx;
  overflow: hidden;
  margin: 40rpx;
}

.fit {
  width: 100%;
  height: 100%;
}

.title {
  color: #010001;
  font-weight: 600;
  margin: 0 40rpx;
}

.exit-input {
  font-size: 30rpx;
  margin: 32rpx 40rpx 0 40rpx;
}

.input-placeholder {
  font-size: 30rpx;
  font-weight:400;
  color:rgba(187,187,187,1);
  line-height: 30rpx;
}

.showbar {
  height: 92rpx;
  margin: 0 40rpx 40rpx 40rpx;
  border-bottom: 2rpx solid #eeeeee;
}

.good-list {
  display: flex;
  flex-wrap: wrap;
  padding: 0 30rpx 40rpx 30rpx;
}

.fl {
  float: left;
  margin-top: 40rpx;
}

.good-list .fl:nth-child(2n) {
  margin-left: 38rpx;
}

.img {
  width: 320rpx;
  height: 320rpx;
  background: rgba(238,238,238,1);
  border-radius: 8rpx;
}

.good-name, .add-text {
  font-size: 32rpx;
  color: #1D1E1F;
  line-height: 80rpx;
}

.add-text {
  text-align: center;
}

.old-price {
  font-size: 24rpx;
  color: rgba(235,199,127,1);
  margin-left: 8rpx;
  text-decoration: line-through;
}

.btn-group {
  margin-top: 30rpx;
  color: #BBBBBB;
  font-size: 30rpx;
}

.btn-group .btn:nth-child(2) {
  text-align: center;
  border-left: 2rpx solid #EEEEEE;
  border-right: 2rpx solid #EEEEEE;
}

.btn-group .btn:nth-child(3) {
  text-align: right;
}

