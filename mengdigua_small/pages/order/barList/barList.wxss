/* pages/order/barList/barList.wxss */

.tab-wrap {
  justify-content: space-around;
  background-color: #fff;
  position: fixed;
  width: 100%;
  left: 0;
  top: 0;
  z-index: 9;
  font-size: 30rpx;
}

.content-wrap {
  padding-top: 100rpx;
}

.empty-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.go-look {
  width: 330rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 4rpx;
  border: 1px solid #e50a35;
  margin-top: 80rpx;
  font-size: 30rpx;
}

.empty-img {
  width: 260rpx;
  height: 160rpx;
  margin-top: 180rpx;
}

.empty-text {
  color: #999;
  margin-top: 32rpx;
}

.tab {
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  position: relative;
  font-weight: 300;
  color: #b3b3b3;
}

.line {
  position: absolute;
  bottom: 2rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background: #e50a35;
  border-radius: 3rpx;
}

.tab-active {
  color: #363636;
  font-weight: 600;
  font-size: 30rpx;
}

.list-total {
  margin-top: 108rpx;
  background: #fff;
}

.each-total {
  padding: 32rpx 40rpx;
}

.each-image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 32rpx;
}

.title {
  font-size: 24rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(57, 57, 57, 1);
  line-height: 34rpx;
  height: 34rpx;
  margin-bottom: 10rpx;
}

.remark {
  font-size: 20rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(179, 179, 179, 1);
  line-height: 28rpx;
  height: 28rpx;
  margin-bottom: 14rpx;
}

.word-color {
  color: #e50a35;
}

.des {
  font-size: 24rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: rgba(57, 57, 57, 1);
  line-height: 34rpx;
  min-height: 68rpx;
  margin-bottom: 4rpx;
}

.progress-width {
  width: 360rpx;
  position: relative;
  box-shadow: 0 0 1rpx 5rpx rgba(229, 10, 53, 0.1);
  border-radius: 10rpx;
}

.progress-width2 {
  box-shadow: 0 0 1rpx 5rpx rgba(179, 179, 179, 0.1);
}

.progress-value {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  font-size: 20rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 28rpx;
}

.word-style {
  font-size: 24rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(57, 57, 57, 1);
  line-height: 34rpx;
}

.bg-box {
  width: 64rpx;
  height: 40rpx;
  background: rgba(229, 10, 53, 0.1);
  border-radius: 8rpx;
  color: #e50a35;
  text-align: center;
  line-height: 40rpx;
}

.time-des {
  color: #e50a35;
  margin: 0 6rpx;
}

.bar-button {
  width: 144rpx;
  padding: 0 24rpx;
  height: 50rpx;
  background: rgba(231, 12, 42, 1);
  border-radius: 25rpx;
  font-size: 24rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
  line-height: 50rpx;
  margin: 0;
}

.box-bottom {
  margin-top: 30rpx;
}

.gray {
  color: #b3b3b3;
}

.title2 {
  font-size: 24rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: rgba(229, 10, 53, 1);
}

.box-bottom-gray {
  font-size: 24rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(57, 57, 57, 1);
  line-height: 34rpx;
}
