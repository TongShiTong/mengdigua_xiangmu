/* pages/fq/fq.wxss */

.tab {
  padding: 20rpx 30rpx 0 30rpx;
  background-color: #1D1E1F;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 66;
  width: 690rpx;
}
.tab-item {
  position: relative;
  margin-right: 44rpx;
  padding-bottom: 20rpx;
}
.active-tab {
  font-size: 40rpx;
  color: #fff;
}
.un-tab {
  font-size: 32rpx;
  color: rgba(255,255,255,0.5);
}
.tab-line {
  width:120rpx;
  height:6rpx;
  background:rgba(255,255,255,1);
  border-radius:3rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 2rpx;
}
.list {
  position: fixed;
  left: 0;
  top: 96rpx;
  z-index: 66;
  width: 100%;
  padding-bottom: 400rpx;
}
.list-item {
  padding: 30rpx;
  border-bottom: 1px solid #f4f4f4;
  background-color: #fff;
}
.head-img {
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
}
.info {
  height: 80rpx;
  margin-left: 24rpx;
}
.info-name {
  color: #333333;
  font-size: 30rpx;
}
.copy-img {
  width: 22rpx;
  height: 26rpx;
}
.coyp {
  font-size: 24rpx;
  margin-left: 16rpx;
  color: #777777;
}
.copy-wrap {
  width:186rpx;
  height:50rpx;
  border-radius:6rpx;
  background-color: #F8F8F8;
}
.rich {
  padding: 30rpx 0;
  color: #555555;
}
.img-wrap {
  padding: 30rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}
.img {
  width:220rpx;
  height:220rpx;
  border-radius:4rpx;
  margin: 0 10rpx 10rpx 0;
}
.earn-text {
  font-size: 24rpx;
  color: #B52902;
}
.earn {
  color: #B52902;
  font-size: 36rpx;
  margin-left: 12rpx;
}
.share-wrap {
  width:204rpx;
  height:64rpx;
  background:rgba(248,248,248,1);
  border-radius:8rpx;
}
.coyp-share {
  font-weight: 500;
  margin-left: 16rpx;
}
.fq-img {
  width: 28rpx;
  height: 34rpx;
}
.list-bottom {
  padding: 10rpx 0;
}
.no-list {
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #f4f4f4;
  color: #999999;
}

.index-scroll-three{
  padding:0 0 300rpx 0;
}