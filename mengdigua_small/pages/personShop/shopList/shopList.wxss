/* pages/personShop/shopList/shopList.wxss */
page {
  background: #fff;
}
.adming-title{
  text-align: right;
  
}

.shop-title {
  font-size: 28rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(1, 0, 1, 1);
  line-height: 100rpx;
  height: 100rpx;
}

.input-line {
  margin-bottom: 32rpx;
}

.shop-title2 {
  font-size: 28rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(1, 0, 1, 1);
  height: 108rpx;
  line-height: 108rpx;
  border-top: 1rpx solid #eee;
}

.admin {
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(187, 187, 187, 1);
}

.earn {
  position: absolute;
  width: 34rpx;
  height: 34rpx;
  color: #fff;
  background-color: #c80000;
  text-align: center;
  line-height: 34rpx;
  border-radius: 50%;
  left: 0;
  top: 50%;
  font-size: 22rpx;
  transform: translateY(-50%);
}

.earn-price {
  margin-left: 26rpx;
  height: 29rpx;
  line-height: 29rpx;
  padding: 0 12rpx 0 20rpx;
  border-radius: 0 18rpx 18rpx 0;
}

.button-bottom {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  background: #fff;
  box-shadow: 0 2rpx 0 0 #eee;
  border-top: 2rpx solid #eee;
}

.delate {
  width: 212rpx;
  text-align: center;
  height: 98rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Medium;
  font-weight: 600;
  color: #fff;
  line-height: 98rpx;
}

.shop-list-choice-1 {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: #fff;
  border: 2rpx solid #1d1e1f;
  position: relative;
}

.shop-list-choiced-1 {
  border-color: #fff;
}

.center-circle-1 {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #fff;
  box-shadow: 0 0 8rpx 0 rgba(0, 0, 0, 0.2);
}

.choice-left {
  margin-left: 32rpx;
}

.choice-all {
  margin-left: 16rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Medium;
  font-weight: 600;
  color: #333333;
}
.button-style{
  height: 100%;
  text-align: center;
  line-height: 98rpx;
  color: #fff;
}