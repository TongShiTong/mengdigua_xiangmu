/* pages/class/serch/serch.wxss */
page {
  background-color: #fff;
}
.hot-serch {
  margin-top: 150rpx;
  padding: 0 30rpx;
  position: absolute;
  left: 0;
  top: -10rpx;
  width: 690rpx;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  z-index: 100;
  background-color: #fff;

  box-shadow:0px -12rpx 16rpx 0px rgba(0,0,0,0.07);
  border-radius:24rpx;
}
.hot-text {
  color: #333333;
  font-weight: 700;
  font-size: 32rpx;
 
}
.serch-label {
  flex-wrap: wrap;
  margin-top: 30rpx;
}
.label {
  padding: 10rpx 32rpx;
  border-radius: 30rpx;
  margin-bottom: 20rpx;
  margin-right: 20rpx;
  background-color: #F8F8F8;
  color: #555555;
}
.delete-img {
  width: 38rpx;
  height: 38rpx;
}
.label-box {
  width: 100%;
  height: 44rpx;
  margin: 10rpx 0;
}
.hurry-search{
  margin-top: 30rpx;
  height:42rpx;
  font-size:30rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(85,85,85,1);
  line-height:42rpx;
}
