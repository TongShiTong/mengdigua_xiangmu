<view wx:if="{{theme || theme===0}}">
	<navbar title="首页" bgColor="#fff" />
	<view class='user-head flex-row-s bg-white' style="top:{{barHeight/_ratio*2}}rpx" wx:if="{{ (launchOptions.scene == 1047 || launchOptions.scene == 1048 || launchOptions.scene == 1049) || superUser != '' }}">
		<view class='flex-row-f'>
			<image
			 src="{{ superUser.head_url }}"
			 wx:if="{{ superUser.head_url }}"
			 class='head-img'
			 mode="aspectFill"
			/>
			<view class='user-nickname' wx:if="{{ superUser.nickname }}">{{ S1.substr(superUser.nickname,5) }}</view>
		</view>
		<view class='flex-1 user-serch flex-row-s' bindtap='jumpSerch'>
			<view class='serch-text'>搜索商品，共2000款好物!</view>
			<image src="/images/serch.png" class='serch-img' mode="aspectFill" />
		</view>
	</view>
	<!-- 搜索 -->
	<view class='serch-wrap flex-row bg-white' style="top:{{barHeight/_ratio*2}}rpx" wx:else>
		<serch-three isRead="{{ showNoRead }}" />
	</view>
	<!-- tab -->
