      <image src="/images/class2.png" class='class-img' mode="aspectFill"></image>
    </view> 
	</view> -->

	<!-- 楼层 -->
	<block 
    wx:for="{{ tab }}" 
    wx:key="index">
		<view wx:if="{{item.loading&&floorShow}}">
			<floor-total
			 showIndex="{{index}}"
			 show="{{item.show}}"
			 floorCode="{{ item.position_code }}"
			 groundTimes="{{groundTimes}}"
			 groupList="{{groupList}}"/>
		</view>
	</block>

	<!-- <modal wx:if="{{ isShowModal }}" isShowModal="{{ isShowModal }}"></modal> -->
	<view class='mask' wx:if="{{ showIndexModel }}" bindtap='colseModal' />
	<view wx:if="{{ showIndexModel }}" class='modal-amx'>
		<view class='modal-po'>
			<image
			 catchtap='jumpModal'
			 src="{{ indexModel.img_url }}"
			 class='modal-img'
			 mode='aspectFit'
			/>
			<image
			 src="/images/message-cancel.png"
			 bindtap='colseModal'
			 class='index-cancel-img'
			 mode="widthFix"
			/>
		</view>
	</view>
	<tabbar tabbar="{{tabbar}}" />
	<platform-coupon showModel='{{showType}}' couponList="{{couponList}}" bind:onchange="close" />
	<!-- <share showShare="{{ showShare }}" bind:shareSuccess="shareSuccess" shareImg="{{ shareImg.share_img }}"></share> -->
</view>

