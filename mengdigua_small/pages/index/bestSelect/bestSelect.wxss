/* pages/index/bestSelect/bestSelect.wxss */
.back {
  position: fixed;
  left: 30rpx;
  top: 30rpx;
  color: #fff;
  width: 80rpx;
  border-radius: 50%;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  z-index: 99;
}
.bs-scroll{
  height: 100%;
}
.top_title{
  padding: 30rpx;
}
.top-title {
  color: #1D1E1F;
  font-size: 52rpx;
  margin-right: 20rpx;
}
.title-num {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  border: 1px solid #1D1E1F;
  text-align: center;
  line-height: 44rpx;
  font-weight: 700;
}
.select-img {
  width: 100%;
  height: 320rpx;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}
.title {
  font-size: 28rpx;
  font-weight: 700;
}
.num {
  margin: 20rpx 0 30rpx 0;
}
.buy-now {
  width:140rpx;
  height:50rpx;
  line-height: 50rpx;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  background:rgba(186,141,73,1);
  border-radius:10rpx;
}
.red-price {
  font-size: 30rpx;
}
.price-th {
  color: #999999;
  text-decoration: line-through;
  margin-left: 30rpx;
  font-size: 24rpx;
}
.card {
  background:rgba(255,255,255,1);
  border-radius:30rpx 30rpx 16rpx 16rpx;
  width: 684rpx;
  margin: 0 auto 32rpx;
}
.list-content {
  background:rgba(245,245,245,0.5);
  padding: 0 30rpx;
}
.vip-share{
  height: 37rpx;
  width: 43rpx;
}
.share-wrap {
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  z-index: 333;
  width:104rpx;
  height:104rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 16rpx 20rpx 0px rgba(0,0,0,0.1);
  border-radius: 50%;
}