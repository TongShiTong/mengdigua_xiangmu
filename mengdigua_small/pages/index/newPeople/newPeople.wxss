/* pages/index/newPeople/newPeople.wxss */
.back {
  position: fixed;
  left: 30rpx;
  top: 30rpx;
  color: #fff;
  width: 80rpx;
  border-radius: 50%;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  z-index: 99;
}
.bg-wrap {
  position: relative;
  width: 100%;
  /* height: 264rpx; */
  height:400rpx;
}
.banner-wrap {
  height: 100%;
}
.swiper {
  height: 100%;
}
.slide-image {
  width: 100%;
  height: 100%;
}
/* 列表 */
.list-wrap {
  width: 100%;
  background-color: #fff;
}
.list {
  border-radius:14rpx;
  position: relative;
  border-bottom: 1px solid #eee;
  padding: 50rpx 30rpx 30rpx 30rpx;
}
.text-reark {
  color: #C0C0C0;
  font-size: 24rpx;
}
.tip {
  position: absolute;
  left: 20rpx;
  top: 30rpx;
  z-index: 9;
  padding: 4rpx 20rpx;
  background-color: #E77B5E;
  color: #fff;
  font-size: 24rpx;
  border-radius: 4rpx;
}
.new-price-title {
  padding: 2rpx 10rpx;
  border-radius:4rpx;
  border:1px solid rgba(181,41,2,1);
  font-size: 22rpx;
  color: #B52902;
  margin-right: 20rpx;
}
.new-price {
  font-size: 32rpx;
  color: #B52902;
}
.good-img {
  width: 260rpx;
  height: 260rpx;
  border-radius: 10rpx;
}
.right-list {
  height: 260rpx;
  margin-left: 24rpx;
  width: 400rpx;
}
.buy-img {
  width: 20rpx;
  height: 20rpx;
}
.buy {
  width:108rpx;
  height:56rpx;
  background:linear-gradient(41deg,rgba(215,43,24,1) 0%,rgba(215,24,87,1) 100%);
  border-radius:8rpx;
  text-align: center;
  line-height: 56rpx;
  color: #fff;
}
.vip-share{
  height: 37rpx;
  width: 43rpx;
}
.share-wrap {
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  z-index: 333;
  width:104rpx;
  height:104rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 16rpx 20rpx 0px rgba(0,0,0,0.1);
  border-radius: 50%;
}