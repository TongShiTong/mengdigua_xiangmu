.list {
  border-top: 1px solid #f4f4f4;
  padding: 30rpx;
}
.time-wrap {
  margin: 20rpx 0;
}
.empty-img {
  width: 200rpx;
  height: 132rpx;
}
.empty-view {
  width: 100%;
  height: 100%;
}
.empty-text {
  margin-top: 50rpx;
  color: #555555;
  font-size: 24rpx;
}
.list-time {
  background-color: #F5F5F5;
  border-radius: 17rpx;
  text-align: center;
  padding: 0 30rpx;
  line-height: 36rpx;
  height: 36rpx;
  border:1px solid rgba(0, 0, 0, 0.2);
}
.read {
  color: #1F1F1E;
}
.unread {
  color: #999999;
}
.time {
  margin-top: 10rpx;
  font-size: 24rpx;
}
.time-read {
  color: #C0C0C0;
}
.time-unread {
  color: #999999;
}
.circel {
  width: 14rpx;
  height: 14rpx;
  background-color: #FF3700;
  border-radius: 50%;
  margin-right: 10px;
}
.notice-content {
  width: 550rpx;
}
.empty-text {
  text-align: center;
  padding: 30rpx;
  color: #999999;
}