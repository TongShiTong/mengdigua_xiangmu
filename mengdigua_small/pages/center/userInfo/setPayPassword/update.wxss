.flied-wrapper {
  padding: 0 32rpx 32rpx;
  background-color: #fff;
}

.flied-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 98rpx;
  border-bottom: 1rpx solid #eee;
}

.flied-item input {
  flex: 1;
}

.verify-btn {
  width: 190rpx;
  height: 66rpx;
  line-height: 66rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #fff;
}

.confirm-btn {
  margin: 60rpx auto;
  width: 688rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}
