/* pages/center/myCoupon/couponCenter/couponCenter.wxss */

page {
  background: #fff;
}

.top-image {
  width: 100%;
  height: 300rpx;
  margin-bottom: 20rpx;
}

.coupon-total {
  padding: 0 32rpx;
}

.coupon-pic {
  width: 600rpx;
  height: 312rpx;
  display: block;
}

.each-content {
  margin: 0 auto 20rpx;
  box-sizing: border-box;
  height: 168rpx;
  box-shadow: 0 4rpx 18rpx 0 rgba(218, 218, 218, 1);
}

.coupon-info {
  flex: 1;
  padding-left: 40rpx;
}

.coupon-type {
  height: 168rpx;
  width: 152rpx;
  background: linear-gradient(41deg, rgba(215, 43, 24, 1) 0%, rgba(215, 24, 87, 1) 100%);
  border-radius: 0px 8px 8px 0px;
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  text-align: center;
  color: rgba(255, 255, 255, 1);
}

.coupon-type-two {
  background: linear-gradient(41deg, rgba(215, 43, 24, 0.5) 0%, rgba(215, 24, 87, 0.5) 100%);
}

.flex-r-b {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.flex-r-s {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

.flex-r-s-b {
  display: flex;
  flex-direction: row;
  align-items: baseline;
  justify-content: flex-start;
}

.coupon-info-top {
  margin-bottom: 20rpx;
}

.pirce-style {
  margin-right: 20rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(196, 13, 0, 1);
}

.spe-pirce {
  font-size: 60rpx;
  line-height: 80rpx;
}

.use-price {
  font-size: 24rpx;
  font-family: PingFangSC-Medium;
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
  line-height: 34rpx;
}

.coupon-info-time {
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 28rpx;
}

.OneClick {
  width: 240rpx;
  height: 76rpx;
  font-size: 28rpx;
  font-family: JLinXin;
  color: rgba(255, 255, 255, 1);
  line-height: 76rpx;
  border-radius: 20rpx;
  text-align: center;
  background: #ff6161;
  margin: 70rpx auto 40rpx;
}

.center-title {
  text-align: center;
  margin-bottom: 26rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(29, 30, 31, 1);
  line-height: 46rpx;
}

.coupon-type-three {
  font-size: 12rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: #fff;
  padding: 0 12rpx;
  height: 24rpx;
  line-height: 24rpx;
  border-radius: 12rpx;
  border: 1px solid #fff;
}

.coupon-name {
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 34rpx;
}

.coupon-type-four {
  height: 24rpx;
  background: rgba(248, 218, 13, 1);
  border-radius: 12rpx;
  font-size: 12rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(52, 52, 48, 1);
  line-height: 24rpx;
  border: 2rpx solid #F8DA0D !important;
  margin-left: 10rpx;
}
