/* pages/center/seting/address/addAddress/addAddress.wxss */
.set-item {
  border-bottom: 1px solid #f4f4f4;
  background-color: #fff;
  padding: 20rpx 30rpx;
}
.address-input-p {
  color: #999999;
}
.default-address {
  background-color: #fff;
  padding: 30rpx;
}
.default-img {
  width: 32rpx;
  height: 32rpx;
}
.address {
  color: #999999;
}
.address-input {
  width: 500rpx;
}
.info-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  border-bottom: 1px solid #f4f4f4;
  padding: 30rpx;
}
.info-left {
  font-size: 32rpx;
  color: #1f1f1f;
}
.picker {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.picker-text {
  margin-right: 20rpx;
}
.save-btn {
  width:686rpx;
  height:100rpx;
  line-height: 100rpx;
  color: #fff;
  text-align: center;
  margin: 60rpx auto 0;
  font-size: 32rpx;
  background:linear-gradient(270deg,rgba(62,64,66,1) 0%,rgba(29,30,31,1) 100%);
  border-radius:8rpx;
}
/* 省市区样式 */
.citypicker {
  position: fixed;
  left: 0;
  bottom: 0;
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 9999;
}

.citybody {
  position: fixed;
  background-color: #fff;
  bottom: 0rpx;
}

.cityheader {
  position: absolute;
  top: 0rpx;
  width: 100%;
  z-index: 9999;
}

.city-cancel {
  float: left;
  margin: 20rpx;
  color: #818181;
}

.city-true {
  float: right;
  margin: 20rpx;
  color: #2fb42e;
}

.picker-item {
  text-align: center;
}

.mask {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.6);
  overflow: hidden;
  z-index: 9999;
}
/* 框 */
.message-box {
  width: 540rpx;
  background:rgba(252,252,252,1);
  border-radius: 10rpx;
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  z-index: 11111;
}
.message-top {
  height: 95rpx;
  text-align: center;
  color: #030303;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-bottom: 1px solid #f4f4f4;
  margin-bottom: 20rpx;
}
.title {
  font-size: 28rpx;
  color: #333333;
  font-weight: 700;
  height: 95rpx;
  line-height: 95rpx;
}
.sub-title {
  font-size: 24rpx;
  padding: 10rpx 30rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-start;
}
.more-address {
  flex: 1;
}
.message-bottom {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 46rpx;
  padding-bottom: 30rpx;
}
.message-text {
  width:136rpx;
  height:44rpx;
  text-align: center;
  line-height: 44rpx;
  border:1px solid rgba(0, 0, 0, 0.1);
  border-radius:10rpx;
}
.confirm {
  font-size: 24rpx;
  color: #fff;
  background-color: #BA8D49;
}
.cancel {
  font-size: 24rpx;
  color: #333333;
  background-color: #F5F5F5;
  margin-right: 10rpx;
}
.left-address {
  color: #999999;
  margin-right: 30rpx;
}
/* switch */
.wx-switch-input{
  width: 80rpx !important;
  height: 40rpx !important;
}
/*白色样式（false的样式）*/
.wx-switch-input::before{
  width: 80rpx !important;
  height: 40rpx !important;
}
/*绿色样式（true的样式）*/
.wx-switch-input::after{
  width: 36rpx !important;
  height: 36rpx !important;
}
