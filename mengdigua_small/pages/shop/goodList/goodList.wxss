/* pages/shop/goodList/goodList.wxss */

.sort {
  /* border-bottom: 1px solid #f4f4f4; *//* border-top: 1px solid #f4f4f4; */
  position: fixed;
  width: 100%;
  left: 0;
  top: 0;
  z-index: 99999;
  background: #fff;
  box-shadow: 10rpx 0 10rpx 0 #fff;
}

.sort >view {
  flex: 1;
  height: 106rpx;
  line-height: 106rpx;
  text-align: center;
  font-size: 28rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(29, 30, 31, 1);
}

.down-img {
  width: 16rpx;
  height: 28rpx;
}

.sort-text {
  color: #484848;
}

.soer-active {
  color: #ff3700;
}

.sort-modal {
  position: fixed;
  width: 100%;
  left: 0;
  top: 98rpx;
  z-index: 99999;
}

.select-img {
  width: 32rpx;
  height: 21rpx;
}

/* list */

.list {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-top: 100rpx;
  /* padding: 0 30rpx; */
  background-color: #fff;
}

.good-img {
  width: 330rpx;
  height: 330rpx;
  padding-top: 30rpx;
}

.good {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  margin-bottom: 36rpx;
}

.good-title {
  width: 330rpx;
  margin-top: 20rpx;
}

.label-box {
  width: 100%;
  height: 44rpx;
  margin-top: 16rpx;
}

.label {
  color: #fff;
  background-color: #1f1f1e;
  padding: 8rpx 20rpx;
  font-size: 20rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.good-bottom {
  width: 330rpx;
  margin-top: 25rpx;
}

.price {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

.red-price {
  color: #ff3700;
  font-size: 20rpx;
}

.red-big-price {
  color: #ff3700;
  font-size: 32rpx;
}

.sale-num {
  color: #878787;
  font-size: 20rpx;
}
