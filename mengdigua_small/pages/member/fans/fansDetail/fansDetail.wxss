/* pages/member/fans/fansDetail/fansDetail.wxss */

.list {
  padding: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-start;
}

.list-right {
  margin-left: 24rpx;
  width: 578rpx;
  height: 120rpx;
  align-items: flex-start;
}

.head-img {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
}

.list-name {
  font-size: 30rpx;
  font-weight: 700;
  margin-right: 16rpx;
}

.list-num {
  color: #b72e08;
  font-size: 30rpx;
}

.word-total {
  text-align: center;
  background: #fff;
  padding-top: 30rpx;
  box-sizing: border-box;
  height: 158rpx;
}

.count-word {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #b2b2b2;
  margin-right: 8rpx;
}

.count-number {
  font-size: 52rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(85, 85, 85, 1);
}

.question {
  width: 24rpx;
  height: 24rpx;
}

.center-word {
  width: 590rpx;
  height: 316rpx;
  background: #fff;
  border-radius: 12rpx;
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.top-memer {
  text-align: center;
  font-size: 40rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: #1d1e1f;
  padding: 62rpx;
}

.remark-word {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  padding: 0 72rpx;
  text-align: center;
}

.ready-open {
  padding: 0 12rpx;
  height: 28rpx;
  line-height: 28rpx;
  color: #fff;
  background: #ebc77f;
  border-radius: 4rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
}

.ready-open2 {
  background: #fff;
  color: #ebc77f;
  border: 1rpx solid #ebc77f;
}

.earn-word-total {
  padding-top: 30rpx;
  padding-bottom: 46rpx;
  border-bottom: 1rpx solid #eee;
}

.earn-word {
  font-size: 28rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: #6e6e6e;
}

.tab {
  margin-top: 16rpx;
  background-color: #fff;
  border-bottom: 1px solid #eee;
}

.tab-wrap:first-child {
  border-right: 1px solid #eee;
}

.tab-wrap {
  flex: 1;
  height: 98rpx;
  font-size: 30rpx;
  position: relative;
}

.tab-active {
  color: #b72e08;
}

.un-active {
  color: #555;
}

.ver-line {
  margin: 0 16rpx;
}

.line {
  position: absolute;
  left: 0;
  bottom: 2rpx;
  width: 100%;
  background-color: #b72e08;
  height: 4rpx;
}

.income {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 87;
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  height: 98rpx;
  font-size: 32rpx;
  color: #fff;
}

.section-total {
  height: 50rpx;
  padding: 0 34rpx;
  box-sizing: border-box;
}

.section {
  padding: 0 24rpx;
  height: 52rpx;
  border-radius: 26rpx;
  border: 2px solid rgba(151, 151, 151, 1);
}

.section-total-bg {
  background: #fff;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.order-total {
  background: #fff;
}

.good-img {
  width: 144rpx;
  height: 144rpx;
  border-radius: 8rpx;
}

.good-right {
  flex: 1;
  margin-left: 24rpx;
  height: 144rpx;
}

.earn-price {
  margin-left: 26rpx;
  height: 36rpx;
  line-height: 36rpx;
  padding: 0 10rpx 0 20rpx;
  color: #1d1e1f;
  font-size: 24rpx;
}

.earn {
  position: absolute;
  width: 34rpx;
  height: 34rpx;
  color: #fff;
  background-color: #b52902;
  text-align: center;
  line-height: 34rpx;
  border-radius: 50%;
  left: 0;
  top: 50%;
  font-size: 22rpx;
  transform: translateY(-50%);
}

.share-price {
  position: relative;
  height: 36rpx;
  background: linear-gradient(41deg, rgba(214, 191, 158, 1) 0%, rgba(209, 184, 146, 1) 100%);
  border-radius: 15rpx;
  text-align: right;
  margin-left: 24rpx;
}

.good-price {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #999;
}

.list-bottom {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 112rpx;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #eee;
  border-top: 1rpx solid #eee;
}

.total-number {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #999;
}

.list-content {
  padding: 30rpx;
}

.total-text {
  margin-left: 24rpx;
}

.total-amount {
}

.top-level {
  height: 96rpx;
  border-bottom: 1rpx solid #eee;
  padding: 0 30rpx;
}

.adjust {
  width: 20rpx;
  height: 25rpx;
  margin-right: 8rpx;
}

.click-number {
  font-size: 24rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: #555555;
  line-height: 34px;
}
.change-up{
  width: 24rpx;
  height: 16rpx;
  padding: 10rpx;
}
.time-total{
  flex-wrap: wrap;
}