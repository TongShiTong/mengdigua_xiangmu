/* pages/member/community/community.wxss */

page {
  background: #fff;
}

.header-url {
  width: 88rpx;
  height: 88rpx;
  margin-right: 24rpx;
  border-radius: 50%;
}

.name {
  font-size: 30rpx;
  font-family: PingFangSC-Medium;
  font-weight: 600;
  color: rgba(29, 30, 31, 1);
}

.invite {
  width: 64rpx;
  height: 30rpx;
  background: rgba(235, 199, 127, 1);
  border-radius: 4rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Medium;
  font-weight: 600;
  color: #fff;
  line-height: 30rpx;
  text-align: center;
}

.cirlre {
  width: 32rpx;
  height: 32rpx;
  background: #fff;
  border: 2rpx solid #1d1e1f;
  border-radius: 50%;
}

.cirlre-active {
  background: #1D1E1F;
  position: relative;
}

.cirlre-active::after {
  content: "";
  position: absolute;
  transform: translate(-50%, -50%);
  width: 12rpx;
  height: 12rpx;
  background: #fff;
  top: 50%;
  left: 50%;
  border-radius: 50%;

}

.invite-people {
  font-size: 24rpx;
  font-family: PingFangSC-Medium;
  font-weight: 600;
  color: #999;
}

.time {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #999;
  width: 360rpx;
}

.income {
  font-size: 28rpx;
  font-family: PingFangSC-Medium;
  font-weight: 600;
  color: #6e6e6e;
}

.bottom-button {
  width: 100%;
  height: 98rpx;
  background: #fff;
  box-shadow: 0 2rpx 0 0 #eee;
  display: flex;
  justify-content: flex-end;
  position: fixed;
  bottom: 0;
  border-top: 1rpx solid #EEEEEE;
}

.button-info {
  width: 232rpx;
  height: 98rpx;
  border: 2rpx solid #ff688f;
  font-size: 30rpx;
  font-family: PingFangSC-Medium;
  font-weight: 600;
  color: #FF688F;
  line-height: 98rpx;
  text-align: center;
}

.button-info2 {
  color: #fff;
  width: 212rpx;
  background: linear-gradient(270deg, #ff97b2 0%, #ff688f 100%);
}

.top-sort {
  height: 80rpx;
  position: fixed;
  width: 100%;
  left: 0;
  top: 140rpx;
  z-index: 220;
  background-color: #fff;
}

.top-sort-two {
  height: 80rpx;
  position: fixed;
  width: 100%;
  left: 0;
  top: 0;
  z-index: 220;
  background-color: #fff;
}


  .sort-title {
  flex: 1;
  font-size: 24rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  color: #333;
}

.sort-img {
  width: 12rpx;
  height: 22rpx;
  margin-left: 10rpx;
}
.center-input{
  padding: 40rpx 30rpx;
  width: 600rpx;
  height: 300rpx;
  background: #fff;
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
