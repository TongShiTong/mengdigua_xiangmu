.back-black{
  width:750rpx;
  height:800rpx;
  background:rgba(0,0,0,0.65);
}
.recommend{
  width:750rpx;
  color: #fff;
  font-size: 30rpx;
  padding-top: 60rpx;
  text-align: center;
}
.poster-wrap{
  position: fixed;
  top:280rpx;
  left: 102rpx;
  width:546rpx;
  height:738rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 2rpx 24rpx 0rpx rgba(0,0,0,0.09);
  border-radius:20rpx 20rpx 16rpx 16rpx;
}
.bottom-btn{
  margin-top: 120rpx;
  width:750rpx;
  text-align: center;
  display: flex;
  justify-content: space-evenly;
}
.btn{
  padding: 0 !important;
  margin: 0 !important;
  overflow: auto;
  background: transparent !important;
  line-height: 1.4;
  font-size: 28rpx;
}
button::after {
  border: none;
}
button {
  background-color: #fff;
}