/* pages/assemble/index.wxss */

page {
  height: auto;
}

.assemble-scroll {
  background-color: white;
  padding: 80rpx 0 98rpx 0;
}

.tab-head {
  width: 100%;
  position: -webkit-sticky;
  position: sticky;
  z-index: 99;
}


/* 秒杀 */

.skill-scroll {
  height: 108rpx;
  padding: 6rpx 30rpx 0 30rpx;
  /* background-color: #F8DA0D; */
  background-color: #F8DA0D;
  border-bottom: 1px solid #EEEEEE;
}

.skill {
  width: 690rpx;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #f4f4f4;
  background: #Fff;
}

.skill:last-child {
  border-bottom: transparent;
}

.skill-tab {
  border-radius:8rpx;
  width: 132rpx;
  text-align: center;
  display: inline-block;
  color: #B2B2B2;
  position: relative;
  margin:  10rpx;
  overflow: hidden;
}
.skill-tab::after{
  content: "";
  position: absolute;
  right: -12rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 2rpx;
  height: 24rpx
}

.skill-time {
  font-weight: 700;
  font-size: 28rpx;
  color: #B2B2B2;
}


.skill-time-active {
  color: #b52902;
}

.skill-title {
  padding-bottom: 10rpx;
  font-size: 20rpx;
}

.skill-title-active {
  color: #b52902;
}
.skill-title-two{
  /* color: #fff; */
  color:#111;
 
}
.skillActive{
  color:#111;

}
.skill-deal-num {
  color: #999;
  font-size: 24rpx;
}

.skill-line {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 4rpx;
  border-radius: 3rpx;
  background-color: #b52902;
  z-index: 10;
}

.skill-img {
  width: 690rpx;
  height: 332rpx;
  border-radius: 10rpx;
}

.skill-good-name {
  color: #333;
  margin-top: 10rpx;
}

.skill-good-remark {
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #c0c0c0;
}

.is-skill {
  width: 86rpx;
  height: 36rpx;
  text-align: center;
  line-height: 36rpx;
  background: rgba(32, 31, 30, 0);
  border: 1px solid #b52902;
  border-radius: 6rpx;
  color: #b52902;
  font-size: 22rpx;
  margin-right: 20rpx;
}

.seckill-price {
  font-size: 30rpx;
}

.share-price {
  position: relative;
  height: 29rpx;
  border-radius: 15rpx;
  text-align: right;
}

.earn {
  position: absolute;
  width: 34rpx;
  height: 34rpx;
  color: #fff;
  background-color: #b52902;
  text-align: center;
  line-height: 34rpx;
  border-radius: 50%;
  left: 0;
  top: 50%;
  font-size: 22rpx;
  transform: translateY(-50%);
}

.earn-price {
  margin-left: 26rpx;
  height: 29rpx;
  line-height: 29rpx;
  padding: 0 12rpx 0 20rpx;
  font-size: 24rpx;
  border-radius: 0 18rpx 18rpx 0;
}

.list-btn {
  border-radius: 6rpx;
  text-align: center;
}

.buy {
  border: 1px solid #1d1e1f;
  margin-right: 10rpx;
  width: 108rpx;
  height: 56rpx;
  text-align: center;
  line-height: 56rpx;
  color: #fff;
}

.extend {
  color: #fff;
  width: 110rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
}
