/* pages/assemble/joinGroup/joinGroup.wxss */

.download-app {
  z-index: 10;
  height: 128rpx;
  background: white;
  padding: 0 30rpx;
  position: relative;
  box-shadow: 0px 18px 16px 0px rgba(0, 0, 0, 0.03);
}

.download {
  color: white;
  font-size: 24rpx;
  text-align: center;
  width: 104rpx;
  height: 52rpx;
  line-height: 52rpx;
  border-radius: 16rpx;
  margin-right: 10rpx;
}

.app-icon {
  width: 88rpx;
  height: 88rpx;
  background: linear-gradient(270deg, rgba(75, 84, 86, 1) 0%, rgba(56, 65, 66, 1) 100%);
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.app-text {
  color: #1f1f1f;
  font-weight: 500;
}

.f11 {
  font-size: 22rpx;
}

.f12 {
  font-size: 24rpx;
  line-height: 34rpx;
}

.f14 {
  font-size: 28rpx;
  line-height: 40rpx;
}

.f16 {
  font-size: 32rpx;
}

.good {
  height: 224rpx;
  margin: 0 auto;
  width: 690rpx;
  padding: 32rpx 0;
  box-sizing: border-box;
  border-bottom: 1rpx solid #eee;
}

.good-image {
  width: 160rpx;
  height: 160rpx;
  background: #ececec;
  border-radius: 16rpx;
  margin-right: 24rpx;
}

.good-detail {
  display: flex;
  height: 100%;
  flex-direction: column;
  justify-content: space-between;
}

.tag {
  font-size: 22rpx;
  border-radius: 4rpx;
  padding: 4rpx 14rpx;
  margin-right: 16rpx;
  border: 2rpx solid white;
}

.warnning-text {
  color: #1f1f1f;
  line-height: 44rpx;
  margin-top: 24rpx;
  font-weight: 600;
}

.timeout {
  color: #878787;
  line-height: 40rpx;
  margin-top: 48rpx;
}

.timeout-listin {
  font-size: 32rpx;
  font-family: PingFangSC-Regular;
  font-weight: 600;
  color: rgba(29, 30, 31, 1);
}

.join-btn {
  width: 300rpx;
  height: 74rpx;
  line-height: 74rpx;
  text-align: center;
  border-radius: 43rpx;
  margin: 32rpx 0 52rpx 0;
}

.member {
  margin-top: 16rpx;
  padding: 30rpx;
}

.member-left {
  color: #707070;
  line-height: 34rpx;
  width: 192rpx;
}

.member-right {
  width: 288rpx;
  flex-wrap: wrap;
  box-sizing: border-box;
  margin-top: -24rpx;
}

.member-right .member-person:nth-child(3n-1) {
  margin: 24rpx 24rpx 0 24rpx;
}

.member-person {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  position: relative;
  box-sizing: border-box;
  margin-top: 24rpx;
}

.member-image {
  z-index: 10;
  width: 100%;
  height: 100%;
  position: relative;
  background-color: #eaeaea;
  border-radius: 50%;
}

.crown {
  position: absolute;
  top: -24rpx;
  left: -10rpx;
  width: 52rpx;
  height: 44rpx;
  z-index: 1;
}

.fail-content {
  text-align: center;
  background: #fff;
  padding-bottom: 48rpx;
}

.fail-image {
  width: 200rpx;
  height: 184rpx;
  margin: 56rpx auto 30rpx;
}

.grop-button {
  text-align: center;
  margin: 0 auto;
  width: 300rpx;
  height: 74rpx;
  border-radius: 41rpx;
  border: 2rpx solid rgba(255, 104, 143, 1);
  font-size: 28rpx;
  font-weight: 400;
  color: #fff;
  line-height: 74rpx;
  margin-bottom: 48rpx
}

.time {
  font-size: 40rpx;
  font-family: DIN-Bold;
  font-weight: bold;
  color: #1f1f1f;
  line-height: 48px;
}

.title {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #1f1f1f;
  line-height: 40rpx;
  margin-bottom: 18rpx;
}

.remark1 {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(135, 135, 135, 1);
  line-height: 40rpx;
}

.invite {
  margin: 42rpx auto 48rpx;
  border: 1rpx solid #fff;
  padding: 0 66rpx;
  height: 74rpx;
  line-height: 74rpx;
  border-radius: 41rpx;
}

.fail-word2 {
  font-size: 32rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(31, 31, 31, 1);
}

.fail-word3 {
  font-size: 24rpx;
  margin-bottom:30rpx; 
  margin-top:20rpx; 
  color: rgba(117, 117, 117, 1);
}

.fail-word {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(135, 135, 135, 1);
  line-height: 28rpx;
  margin: 22rpx auto;
}

/*  */

.like-title {
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  color: #999;
}

.old-price {
  text-decoration: line-through;
  color: gray;
  margin-left: 8rpx;
}
