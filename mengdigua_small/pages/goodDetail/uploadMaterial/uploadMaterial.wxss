/* pages/goodDetail/uploadMaterial/uploadMaterial.wxss */
.user-evaluate {
  padding: 30rpx;
  border-top: 1px solid #f4f4f4;
}
.super {
  background-color: #fff;
  padding-bottom: 30rpx;
}
.textarea {
  width: 690rpx;
  height: 200rpx;
}
.evaluate-btn {
  width:686rpx;
  height:100rpx;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  margin: 60rpx auto 0;
  background:linear-gradient(270deg,rgba(62,64,66,1) 0%,rgba(29,30,31,1) 100%);
  border-radius:8rpx;
}
.upload-img {
  width: 190rpx;
  height: 190rpx;
  margin-right: 16rpx;
}
.upload-text {
  color: #888888;
}
.img-list {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: wrap;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
}
.evaluate-img {
  width: 112rpx;
  height: 112rpx;
}
.img-wrap {
  margin-right: 30rpx;
  padding-bottom: 20rpx;
  position: relative;
}
.cancel {
  transform: translate(50%,-50%);
  position: absolute;
  right: 0;
  top: 0;
  background:rgba(0,0,0,0.6);
  color: #fff;
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  border-radius: 50%;
  line-height: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}