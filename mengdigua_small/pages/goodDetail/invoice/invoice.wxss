/* pages/goodDetail/invoice/invoice.wxss */
.super {
  padding-bottom: 120rpx;
}
.info {
  border-top: 1px solid #f4f4f4;
  text-align: right;
}
.left-text {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}
.invoice-item {
  margin-top: 20rpx;
}
.un-active {
  width: 168rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  color: #333333;
  background:#F8F8F8;
  font-size: 26rpx;
  border-radius:10rpx;
  margin: 25rpx 32rpx 20rpx 0;
}
.label {
  width: 164rpx;
  height: 56rpx;
  text-align: center;
  line-height: 56rpx;
  color: #B52902;
  background:rgba(181,41,2,0.04);
  font-size: 26rpx;
  border:1px solid #B52902;
  border-radius:10rpx;
  margin: 25rpx 32rpx 20rpx 0;
}
.select-img {
  width: 32rpx;
  height: 32rpx;
}
.active {
  margin-left: 20rpx;
  color: #CC0000;
}
.no-active {
  margin-left: 20rpx;
  color: #666666;
}
.input-place {
  color: #999999;
}
.input {
  margin-top: 20rpx;
}
.first-input {
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f4f4f4;
}
.btn {
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  color: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  z-index: 99;
}
.help {
  width: 600rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  z-index: 9999;
  background-color: #fff;
  border-radius: 12rpx;
}
.help-head {
  position: relative;
  font-size: 28rpx;
  font-weight: 700;
  text-align: center;
  border-top-left-radius:10rpx;
  border-top-right-radius:10rpx;
  background-color: #fff;
  padding: 30rpx 0;
  margin: 0 30rpx;
  border-bottom: 1px solid #f4f4f4;
}
.help-content {
  background-color: #fff;
}
.close-help {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 0;
  padding: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 9999;
}
.i-know {
  height: 87rpx;
  line-height: 87rpx;
  text-align: center;
  font-size: 32rpx;
  color: #C40E02;
  border-bottom-left-radius:10rpx;
  border-bottom-right-radius:10rpx;
}