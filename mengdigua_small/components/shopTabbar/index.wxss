/* components/shopTabbar/index.wxss */
.tabbar-wrap{
  position:fixed;
  bottom: 0;
  height:100rpx;
  width:750rpx;
  display: flex;
  background: white;
}
.tabbar-item{
  flex: 25%;
  height: 100rpx;
  /* line-height: 100rpx; */
  text-align: center;
}
.tabbar-item:hover{
  background: #f2f2f2;
  transition: background 0.5s ease-in-out;
}
.yellow{
  color:#F8DA0D;
}
.tab-name{
  height:28rpx;
  font-size:20rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  line-height:28rpx;
}