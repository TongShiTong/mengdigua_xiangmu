/* components/shop/shop.wxss */
@import "../../theme/theme-0.wxss";
@import "../../theme/theme-1.wxss";
@import "../../theme/theme-2.wxss";
@import "../../theme/theme-3.wxss";
@import "../../theme/theme-4.wxss";
@import "../../theme/theme-5.wxss";

.wrap {
  background-color: #fff;
  padding: 0 30rpx;
}
.head {
  position: relative;
  padding: 16rpx 0;
}
.line {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 27rpx;
  background:rgba(255,207,93,1);
  border-radius: 4rpx;
}
.title {
  font-size: 36rpx;
  color: #2F2E28;
  margin-left: 20rpx;
}
.look-all {
  color: #CAD5DE;
}
.flex {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.small-right-img {
  width: 24rpx;
  height: 26rpx;
}
.list {
  padding-bottom: 50rpx;
}
.header {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 120rpx;
  padding: 0 30rpx;
}
.head-left {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.shop-info {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
  height: 80rpx;
  margin-left: 20rpx;
}
.shop-nmae {
  color: #1F1F1E;
}
.shop-num {
  color: #878787;
  font-size: 24rpx;
}
.logo-img {
  width: 80rpx;
  height: 80rpx;
  box-shadow:0px 1px 5px 0px rgba(136,136,136,0.5);
}
.jindian {
  color: #1F1F1E;
  font-size: 24rpx;
  width: 92rpx;
  height: 52rpx;
  border: 1px solid #1F1F1E;
  border-radius: 26rpx;
  line-height: 52rpx;
  text-align: center;
}
.shop-img {
  height: 320rpx;
  width: 100%;
  border-radius: 8rpx;
}
.good-img {
  width: 200rpx;
  height: 200rpx;
}
.shop-price {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  width: 200rpx;
  height: 200rpx;
  margin-left: 30rpx;
  padding-bottom: 20rpx;
}
.bottom-wrap {
  position: relative;
  margin-right: 20rpx;
  width: 200rpx;
  height: 200rpx;
}
.bottom {
  position: absolute;
  right: 0;
  bottom: 0;
  background-color: #f4f4f4;
}
.list-first:first-child {
  border-top: 1px solid #f4f4f4;
}