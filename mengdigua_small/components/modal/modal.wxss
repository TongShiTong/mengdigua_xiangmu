/* components/modal/modal.wxss */
.mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.4);
  z-index: 111111;
}
.message-box {
  width: 540rpx;
  background: #fff;
  border-radius: 4rpx;
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  z-index: 111111;
}
.message-top {
  text-align: center;
  color: #030303;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.title {
  font-size: 36rpx;
  padding-top: 30rpx;
}
.sub-title {
  color: #878787;
  padding: 30rpx;
}
.line {
  height: 1px;
  background:#4D4D4D;
  opacity: 0.2;
}
.message-bottom {
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

.confirm-text {
  color: #44B549;
  height: 100rpx;
  width: 100%;
  text-align: center;
  line-height: 100rpx;
  font-size: 36rpx;
}
.confirm-text1{
  color:#000;
}
button, button::after {
  width: 0;
  height: 0;
  border: 0;
  border-radius: 0;
  background-color: #fff;
}
.message-box2{
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  z-index: 111111;
}
.share-image{
  height: 500px;
}

.share-box {
  position: fixed;
  width: 100%;
  z-index: 111112;
  left: 0;
  bottom: 0;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 140rpx;
}
.share-wechat-img {
  width: 44rpx;
  height: 36rpx;
}
.share-pyq-img {
  width: 50rpx;
  height: 50rpx;
}
.share-save-img {
  width: 34rpx;
  height: 34rpx;
}
.tab {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  flex: 1;
  height: 100rpx
}
.share-text {
  color: #666666;
}
.share-btn-text {
  color: #666666;
  font-size: 24rpx;
}
.share-btn {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  line-height: 1.5;
}
.invite-img {
  width: 588rpx;
  height: 850rpx;
}