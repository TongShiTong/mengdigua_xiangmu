/* 大家都在 */

.wrap {
  background-color: #fff;
  padding: 0 30rpx;
}

.title {
  color: #999;
  padding: 30rpx;
  text-align: center;
}

.flex {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.flex-row-f {
  display: flex;
