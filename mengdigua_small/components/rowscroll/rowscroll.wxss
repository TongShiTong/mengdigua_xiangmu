.scoll-style {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
  background: #fff;
}

.each-person {
  display: inline-block;
  width: 280rpx;
  height: 280rpx;
  text-align: center;
  box-sizing: border-box;
  background: rgba(238, 238, 238, 1);
  margin-left: 20rpx;
  border-radius: 10px;
  overflow: hidden;
}

.each-person:last-child {
  margin-right: 20rpx;
}

.portrait-total {
  position: relative;
  width: 140rpx;
  height: 140rpx;
  border-radius: 140rpx;
  left: 50%;
  transform: translate(-50%, 0);
  overflow-x: hidden;
  overflow-y: hidden;
  margin-top: 20rpx;
  margin-bottom: 15rpx;
  z-index: 2;
}

.portrait {
  margin-right: 10px;
  width: 140rpx;
  height: 140rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
  border-radius: 140rpx;
}

.portrait-identity {
  position: absolute;
  top: 105rpx;
  left: 0rpx;
  z-index: 2;
  width: 100%;
  /* margin-top: 100rpx; */
  color: #fff;
  background: rgba(255, 226, 146, 0.5);
}

.person-name {
  text-align: center;
  margin-bottom: 15rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.person-identity {
  text-align: center;
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(146, 168, 183, 1);
  line-height: 20rpx;
  height: 20px;
}

