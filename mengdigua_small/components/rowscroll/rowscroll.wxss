  color: rgba(255, 255, 255, 1);
  line-height: 36rpx;
  margin-bottom: 16rpx;
}

.university-info {
  position: relative;
  z-index: 5;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 28rpx;
}

