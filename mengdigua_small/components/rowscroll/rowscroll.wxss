/* navTwo */

.university {
  width: 346rpx;
  height: 160rpx;
  align-items: flex-start;
  border-radius: 8rpx;
  box-sizing: border-box;
  box-shadow: 0 10rpx 10rpx #ccc;
  display: inline-block;
  margin-right: 20rpx;
  position: relative;
}

.university-pic {
  position: absolute;
  left: 0;
  top: 0;
