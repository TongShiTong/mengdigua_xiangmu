/* 拼团头部 */

.skill-tab {
  display: inline-block;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #b2b2b2;
  padding: 0 16rpx;
  margin: 0 24rpx;
  box-sizing: border-box;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 8px;
  position: relative;
}

.skill-tab::after {
  content: "";
  position: absolute;
  right: -24rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 2rpx;
  height: 24rpx;
  background: #eee;
}

.skill-tab:nth-last-of-type(1)::after {
  display: none;
}

.skill-title-active {
  color: #fff;
}

