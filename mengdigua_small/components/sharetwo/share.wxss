/* components/share/share.wxss */
@import '../../utils/public.wxss';
@import "../../theme/theme-0.wxss";
@import "../../theme/theme-1.wxss";
@import "../../theme/theme-2.wxss";
@import "../../theme/theme-3.wxss";
@import "../../theme/theme-4.wxss";
@import "../../theme/theme-5.wxss";
.botttom-share-word {
  position: fixed;
  left: 0;
  bottom: 0;
  background: #fff;
  height: 568rpx;
  width: 100%;
  z-index: 10000;
}

.top {
  margin: 0 40rpx;
  border-bottom: 1rpx solid #eee;
  height: 104rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title-name {
  font-size: 30rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(29, 30, 31, 1);
}

.close-help {
  width: 40rpx;
  height: 40rpx;
}

.center-content {
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  height: 464rpx;
}

.right-help {
  width: 28rpx;
  height: 28rpx;
  margin-right: 20rpx;
}

.flex-r-s {
  display: flex;
  align-items: center;
}

.save-end {
  width: 566rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(53, 192, 32, 1);
  border: 2rpx solid rgba(53, 192, 32, 1);
  border-radius:4rpx;
}

.mask {
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  z-index: 999999;
  left: 0;
  top: 0;
}
.word{
  margin-left: 20rpx;
}