/* components/modal/modal.wxss */
.mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.4);
  z-index: 111111;
}
.message-box {
  width: 540rpx;
  background: #fff;
  border-radius: 4rpx;
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  z-index: 111111;
}
.message-top {
  text-align: center;
  color: #030303;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.title {
  font-size: 36rpx;
  padding-top: 30rpx;
}
.sub-title {
  color: #878787;
  padding: 30rpx;
}
.line {
  height: 1px;
  background:#4D4D4D;
  opacity: 0.2;
}
.message-bottom {
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.confirm-text {
  color: #44B549;
  height: 100rpx;
  width: 100%;
  text-align: center;
  line-height: 100rpx;
  font-size: 36rpx;
}
button, 
button::after {
  width: 0;
  height: 0;
  border: 0;
  border-radius: 0;
  background-color: #fff;
}
.button-style{
  width: 100%;
  height: 100%;
}