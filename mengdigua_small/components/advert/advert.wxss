.advert {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  width: 690rpx;
  height: 72rpx;
  background-color: #1f1f1e;
  border-radius: 40rpx;
  margin: 0 auto;
}

.swiper-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.hot-advert {
  width: 140rpx;
  height: 48rpx;
  font-size: 24rpx;
  color: #f8f6f2;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 24rpx;
  margin-left: 12rpx;
  line-height: 48rpx;
  text-align: center;
  font-family: HYZhuZiChaoRanTiW;
}

.roll-box {
  height: 40rpx;
  overflow: hidden;
  margin-left: 20rpx;
  width: 100%;
  position: relative;
}

.advert-content {
  color: rgba(255, 255, 255, 0.9);
  height: 40rpx;
  line-height: 40rpx;
}

.advert-time {
  margin-right: 30rpx;
  color: rgba(255, 255, 255, 0.9);
}

.roll-content {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.advert-swiper {
  height: 40rpx;
}
