/* components/pay/pay.wxss */
.mask {
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  z-index: 9999;
  left: 0;
  top: 0;
}
.pay-modal {
  width: 690rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 9999;
  background:rgba(255,255,255,1);
  border-radius: 40rpx 40rpx 0px 0px;
  padding: 40rpx 30rpx 138rpx 30rpx;
}
.modal-title {
  color: #484848;
  padding-bottom: 40rpx;
  border-bottom: 1px solid #f4f4f4;
}
.pay-img {
  width: 48rpx;
  height: 48rpx;
}
.select-img {
  width: 32rpx;
  height: 32rpx;
}
.select-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
}
.item-left {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.pay-text {
  margin-left: 20rpx;
  color: #484848;
}
.pay-btn {
  width: 100%;
  height: 98rpx;
  text-align: center;
  line-height: 98rpx;
  color: #fff;
  background-color: #B52902;
  font-size: 32rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 999999;
}