/* components/shopFormat/shopFormat.wxss */
@import "../../theme/theme-0.wxss";
@import "../../theme/theme-1.wxss";
@import "../../theme/theme-2.wxss";
@import "../../theme/theme-3.wxss";
@import "../../theme/theme-4.wxss";
@import "../../theme/theme-5.wxss";
.mask {
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  z-index: 9999;
  left: 0;
  top: 0;
}
.service-btn {
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  color: #fff;
}
.select-moadl {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  z-index: 9999;
}

.detail {
  background-color: #fff;
  border-radius: 16rpx 16rpx 0px 0px;
}

.detail-spec {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  position: relative;
  border-bottom: 1px solid #f4f4f4;
  padding: 40rpx 30rpx;
}

.selected-subtitle {
  font-size: 24rpx;
  color: #999;
}

.detail-spec-right {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
  margin-left: 20rpx;
  width: 510rpx;
  height: 190rpx;
}

.price-stock {
  width: 100%;
}

.price {
  color: #b52902;
  font-size: 36rpx;
}

.stock {
  color: #878787;
  font-size: 24rpx;
}

.selected {
  color: #333;
  font-size: 24rpx;
  width: 420rpx;
  font-weight: 700;
}

.good-img {
  width: 190rpx;
  height: 190rpx;
  border-radius: 6rpx;
}

.specific {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  margin-top: 20rpx;
  flex-wrap: wrap;
  font-size: 24rpx;
}

.rich {
  background-color: #fff;
}

.detail-rich-img {
  width: 37rpx;
  height: 27rpx;
}

.tip-rich-img {
  width: 37rpx;
  height: 26rpx;
}

.specific-item {
  color: #333;
  background-color: #f8f8f8;
  padding: 10rpx 40rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.actived {
  padding: 8rpx 38rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  color: #b52902;
  background: rgba(181, 41, 2, 0.04);
  border: 1px solid #b52902;
}

.change-num {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: #f6f6f7;
  border-radius: 50%;
}

.un-change {
  color: #999;
}

.buy-number {
  padding: 0 30rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  border-radius: 8rpx;
  background-color: #f6f6f7;
  margin: 0 16rpx;
}

.close-img {
  width: 40rpx;
  height: 40rpx;
}

.good-close-img {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 30rpx;
  top: 30rpx;
}

.service-head {
  width: 100%;
  border-bottom: 1px solid #eee;
  padding-bottom: 20rpx;
}

.buy-num {
  padding: 20rpx 30rpx 50rpx 30rpx;
  border-top: 1px solid #f4f4f4;
  border-bottom: 1px solid #f4f4f4;
}

.coupon-img {
  width: 228rpx;
  height: 92rpx;
}

.coupon-price {
  font-size: 32rpx;
}

.coupon-content {
  position: absolute;
  left: 0;
  top: 0;
  width: 228rpx;
}


/* 布局 */
.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.flex-row-s {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.flex-row-s-a {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.flex-row-f {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.flex-r-e {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}

.flex-column {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.flex-column-s-b {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.flex-column-s {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
}

.selected-subtitle {
  font-size: 24rpx;
  color: #999;
}

.spec-scroll-view {
  max-height: 600rpx;
  padding: 30rpx;
}