/* components/share/share.wxss */
.mask {
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  z-index: 9999;
  left: 0;
  top: 0;
}
.head {
  height: 114rpx;
  background:linear-gradient(90deg,rgba(50,57,77,1) 0%,rgba(33,37,50,1) 100%);
  display: flex;
  flex-direction: row;
  align-items: center;
}
.box {
  z-index: 9999;
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  border-radius: 4rpx;
  width: 590rpx;
}
.compone {
  color: #fff;
  font-size: 32rpx;
  margin-left: 24rpx;
}
.netmi-img {
  width:64rpx;
  height:64rpx;
  margin-left: 32rpx;
}
.share-img {
  width: 590rpx;
  height: 800rpx;
}
.share-box {
  position: fixed;
  width: 100%;
  z-index: 9999;
  left: 0;
  bottom: 0;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 140rpx;
}
.share-wechat-img {
  width: 44rpx;
  height: 36rpx;
}
.share-pyq-img {
  width: 50rpx;
  height: 50rpx;
}
.share-save-img {
  width: 34rpx;
  height: 34rpx;
}
.tab {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  flex: 1;
  height: 100rpx
}
.share-text {
  color: #666666;
}
.share-btn-text {
  color: #666666;
  font-size: 24rpx;
}
.share-btn {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  line-height: 1.5;
}