<!--components/banner/banner.wxml-->
<!-- bannerå›¾ -->
<swiper class='banner-two' 
 indicator-dots="{{indicatorDots}}" 
 circular="{{circular}}" 
 autoplay="{{autoplay}}" 
 interval="{{interval}}" 
 duration="{{duration}}" 
 style='height:{{bannerHeight}};width:{{bannerWidth}};border-radius:{{borderRadius}};'
 >
  <block wx:for="{{bInfos}}" wx:key="id">
    <swiper-item >
      <image src="{{item.img_url}}" mode="aspectFill" lazy-load='true'  class="slide-image" bindtap='goBanerDetail' data-type="{{item.show_type}}" id="{{item.show_param}}" style='border-radius:{{borderRadius}};width:{{bannerWidth}};height:{{bannerHeight}}' lazy-load='true' />
    </swiper-item>
  </block>
</swiper>