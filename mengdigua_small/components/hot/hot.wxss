/* components/hot/hot.wxss */
.wrap {
  background-color: #fff;
  padding: 0 30rpx;
  width: 690rpx;
  height: 100%;
}
.mar {
  margin: 20rpx 0;
}
.list {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: space-between;
  flex-wrap: wrap;
}
.good-img {
  width: 330rpx;
  height: 330rpx;
  padding-top: 30rpx;
}
.good {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  margin-bottom: 36rpx;
  height: 600rpx;
}
.good-title {
  width: 330rpx;
  margin-top: 20rpx;
}
.label-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  width: 100%;
  height: 44rpx;
  margin-top: 16rpx;
}
.label {
  color: #fff;
  background-color: #1F1F1E;
  padding: 8rpx 20rpx;
  font-size: 22rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}
.good-bottom {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 330rpx;
  margin-top: 25rpx;
}
.price {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.red-price {
  color: #FF3700;
  font-size: 22rpx;
}
.red-big-price {
  color: #FF3700;
  font-size: 32rpx;
}
.sale-num {
  color: #878787;
  font-size: 22rpx;
}