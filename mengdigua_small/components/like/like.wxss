/* components/floorGood/floorGood.wxss */
@import "../../theme/theme-0.wxss";
@import "../../theme/theme-1.wxss";
@import "../../theme/theme-2.wxss";
@import "../../theme/theme-3.wxss";
@import "../../theme/theme-4.wxss";
@import "../../theme/theme-5.wxss";
.wrap {
  background-color: #fff;
  padding: 0 30rpx;
}
.title {
  color: #999999;
  padding: 30rpx;
  text-align: center;
}
.flex {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.flex-row-f {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.small-right-img {
  width: 24rpx;
  height: 26rpx;
}
.list {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: space-between;
  flex-wrap: wrap;
}
.good-img {
  width: 326rpx;
  height: 368rpx;
  border-radius: 12rpx;
}
.good {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  margin-bottom: 36rpx;
}
.good-title {
  width: 330rpx;
  margin-top: 16rpx;
  color: #1D1E1F;
}
.good-bottom {
  width: 330rpx;
  margin-top: 25rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.price {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.red-price {
  color: #CC0000;
  font-size: 22rpx;
}
.red-big-price {
  color: #CC0000;
  font-size: 30rpx;
}
.price-th {
  font-size: 24rpx;
  color: #929292;
  text-decoration: line-through;
  margin-left: 20rpx;
}
.team-img {
  width: 36rpx;
  height: 28rpx;
}
.pay-title {
  font-size: 36rpx;
  margin: 0 20rpx;
  padding-top: 20rpx;
}
.sub-title {
  color: #999999;
  font-size: 24rpx;
  text-align: center;
  margin-bottom: 30rpx;
}